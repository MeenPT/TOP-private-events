<h2>Attendees List</h2>
<% if attendees.empty? %>
  <div>
    <p>No one signed up for the event yet.</p>
  </div>
<% else %>
  <table class="table table-bordered rounded-2 mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Guest</th>
      </tr>
    </thead>
    <tbody>
      <% attendees.each_with_index do |attendee, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= attendee.full_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>