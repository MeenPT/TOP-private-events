<h1>Create Event</h1>
<hr>
<section class="pt-4">
  <%= form_with model: @event do |f| %>
    <div class="vstack gap-3">
      <div>
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, autofocus: true ,class: "form-control" %>
        <%= render "shared/field_error", field: :title %>
      </div>
      <div>
        <%= f.label :date, class: "form-label" %>
        <%= f.date_field :date, class: "form-control" %>
        <%= render "shared/field_error", field: :date %>
      </div>
      <div>
        <%= f.label :location, class: "form-label" %>
        <%= f.text_field :location, class: "form-control" %>
        <%= render "shared/field_error", field: :location %>
      </div>
      <div>
        <%= f.label :extra_information, class: "form-label" %>
        <%= f.text_area :extra_information, class: "form-control", rows: "5", placeholder: "Any extra information that you think your guest might want to know. (optional)" %>
        <%= render "shared/field_error", field: :extra_information %>
      </div>
    </div>
    <div class="mt-4">
      <%= f.submit "Create", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>