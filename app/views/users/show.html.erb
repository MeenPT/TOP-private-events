<section>
  <h2>My Events</h2>
  <p class="lead">The events you hosted in the past.</p>
  <div class="mt-4">
    <table class="table table-bordered table-hover rounded-2">
      <thead class="table-light" >
        <tr>
          <th scope="col">#</th>
          <th scope="col">Date</th>
          <th scope="col">Title</th>
          <th scope="col">Location</th>
        </tr>
      </thead>
      <tbody>
        <% @created_events.each_with_index do |event, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= event.date.strftime("%d %b %Y")%></td>
            <td><%= event.title %></td>
            <td><%= event.location %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>